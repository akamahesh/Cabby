<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@drawable/need_help_background"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/topLayout"
        android:layout_marginBottom="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/title"
            android:text="@string/receipt"
            android:textSize="14.63sp"
            android:textColor="@color/background"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="10dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/bookingId"
            android:layout_below="@+id/title"
            android:text="BID"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="10dp"/>

    </RelativeLayout>



    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/popupHeight"
        android:id="@+id/scrollview"
        android:background="@color/addressBackground"
        android:layout_below="@+id/topLayout">


        <RelativeLayout
            android:id="@+id/relative_tip_discount_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="10dp">


            <RelativeLayout
                android:id="@+id/invoice_subtotal_layout"
                android:layout_width="match_parent"
                android:layout_height="?android:attr/actionBarSize">

                <TextView
                    android:id="@+id/invoice_subtotal_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:textSize="14.63sp"
                    android:textColor="@color/receipt_text"
                    android:text="@string/meterFee" />

                <TextView
                    android:id="@+id/meterFee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dp"
                    android:layout_marginEnd="5dp"
                    android:textSize="14.63sp"
                    android:textColor="@color/receipt_text"
                    android:text="$. 00" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/distanceLayout"
                android:layout_width="match_parent"
                android:layout_below="@+id/invoice_subtotal_layout"
                android:layout_height="?android:attr/actionBarSize">

                <TextView
                    android:id="@+id/distanceText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:layout_marginStart="5dp"
                    android:textSize="14.63sp"
                    android:textColor="@color/receipt_text"
                    android:text="@string/distnceFee" />

                <TextView
                    android:id="@+id/distanceValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dp"
                    android:layout_marginEnd="5dp"
                    android:textSize="14.63sp"
                    android:textColor="@color/receipt_text"
                    android:text="$. 00" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/timeLayout"
                android:layout_width="match_parent"
                android:layout_below="@+id/distanceLayout"
                android:layout_height="?android:attr/actionBarSize">

                <TextView
                    android:id="@+id/timeText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:layout_marginStart="5dp"
                    android:textSize="14.63sp"
                    android:textColor="@color/receipt_text"
                    android:text="@string/timeFare" />

                <TextView
                    android:id="@+id/timeValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dp"
                    android:layout_marginEnd="5dp"
                    android:textSize="14.63sp"
                    android:textColor="@color/receipt_text"
                    android:text="$. 00" />
            </RelativeLayout>

            <!--  <RelativeLayout
                  android:id="@+id/parkingLayout"
