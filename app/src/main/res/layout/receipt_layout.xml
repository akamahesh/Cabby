                      android:textColor="@color/receipt_text"
                      android:text="$. 00" />
              </RelativeLayout>
      -->
            <RelativeLayout
                android:id="@+id/airportLayout"
                android:layout_width="match_parent"
                android:layout_below="@+id/timeLayout"
                android:layout_height="?android:attr/actionBarSize">

                <TextView
                    android:id="@+id/airportText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:layout_marginStart="5dp"
                    android:textSize="14.63sp"
                    android:textColor="@color/receipt_text"
                    android:text="@string/airport" />

                <TextView
                    android:id="@+id/airportValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dp"
                    android:layout_marginEnd="5dp"
                    android:textSize="14.63sp"
                    android:textColor="@color/receipt_text"
                    android:text="$. 00" />
            </RelativeLayout>

            <!-- <RelativeLayout
                 android:id="@+id/tollLayout"
                 android:layout_width="match_parent"
                 android:layout_below="@+id/airportLayout"
                 android:layout_height="?android:attr/actionBarSize">

                 <TextView
                     android:id="@+id/tollTExt"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_centerVertical="true"
                     android:layout_marginLeft="5dp"
                     android:layout_marginStart="5dp"
                     android:textSize="14.63sp"
                     android:textColor="@color/receipt_text"
                     android:text="@string/toll" />

                 <TextView
                     android:id="@+id/tollValue"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_alignParentRight="true"
                     android:layout_alignParentEnd="true"
