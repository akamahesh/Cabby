<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?android:actionBarSize"
        android:background="@color/background"
        >

        <ImageButton
            android:id="@+id/button_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:src="@drawable/menu_btn_selector" />


        <TextView
            android:id="@+id/navigationHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:paddingTop="5dp"
            android:layout_toEndOf="@+id/button_menu"
            android:layout_toRightOf="@+id/button_menu"
            android:textColor="@color/white"
            android:textSize="17sp"
            android:gravity="center"
            android:paddingLeft="-40dp"
            android:paddingStart="-40dp"
            />


        <ImageView
            android:id="@+id/nav_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/header_logo_icon"
            android:paddingLeft="-40dp"
            android:paddingStart="-40dp"/>
        <Button
            android:id="@+id/edit_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/back_button"
            android:paddingTop="5dp"
            android:text="@string/edit"
            android:textSize="17sp"
            android:textColor="@color/white"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:visibility="invisible" />

        <Button
            android:id="@+id/cancel_trip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="X"
            android:textSize="20sp"
            android:background="@color/app_color"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:textColor="@color/black"
            android:visibility="invisible" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_gravity="right"
            android:orientation="vertical"
            android:layout_alignParentEnd="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textForTip"
                android:textSize="12sp"
                android:layout_gravity="center"
                android:background="@color/background"
                android:textColor="@color/white"
                android:visibility="gone"
                android:text="@string/driver_tip"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/driverTip"
                android:text="@string/driver_tip"
                android:textSize="12sp"
                android:background="@color/background"
                android:textColor="@color/white"
                android:visibility="invisible"
                />

        </LinearLayout>



    </RelativeLayout>

</LinearLayout>