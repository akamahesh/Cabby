<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E0E0E0"
    android:orientation="vertical" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layout"
        android:orientation="vertical"
        android:background="@color/white">
        <RelativeLayout
            android:id="@+id/profile_image_relative"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:background="@color/white"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="10dp">
            <ImageView
                android:id="@+id/profile_image"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:src="@drawable/createaccount_thumbnail" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/first"
                android:textSize="9sp"
                android:layout_toRightOf="@+id/profile_image"
                android:layout_toEndOf="@+id/profile_image"
                android:inputType="textCapWords"
                android:textColor="@color/titleColour"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:text="@string/first_name"
                android:singleLine="true"/>
            <EditText
                android:id="@+id/profile_first_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:layout_below="@+id/first"
                android:textSize="14sp"
                android:textColor="@color/background"
                android:layout_toRightOf="@+id/profile_image"
                android:layout_toEndOf="@+id/profile_image"
                android:inputType="textCapWords"
                android:paddingLeft="10dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:paddingRight="10dp"
                android:layout_marginRight="5dp"
                android:layout_marginEnd="5dp"
                android:singleLine="true"
                android:cursorVisible="true"
                android:textCursorDrawable="@null"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/last"
                android:layout_below="@+id/profile_first_name"
                android:layout_toRightOf="@+id/profile_image"
                android:layout_toEndOf="@+id/profile_image"
                android:inputType="textCapWords"
                android:textColor="@color/titleColour"
                android:textSize="9sp"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:text="@string/last_name"
                android:singleLine="true"/>
            <EditText
                android:id="@+id/profile_last_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/last"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:textColor="@color/background"
                android:textSize="14sp"
                android:layout_toRightOf="@+id/profile_image"
                android:layout_toEndOf="@+id/profile_image"
                android:inputType="textCapWords"
                android:layout_marginRight="5dp"
                android:layout_marginEnd="5dp"
                android:paddingLeft="10dp"
                android:paddingStart="10dp"
                android:layout_marginBottom="5dp"
                android:paddingRight="10dp"
                android:paddingEnd="10dp"
                android:singleLine="true"
                android:cursorVisible="true"
                android:textCursorDrawable="@null"  />
        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textMobile"
            android:layout_below="@+id/profile_image_relative"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"
            android:textColor="@color/titleColour"
            android:textSize="9sp"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"
            android:gravity="start|center"
            android:text="@string/mobileNumber"
            android:paddingRight="10dp"
            android:paddingEnd="10dp"
            android:layout_marginTop="10dp"
            android:inputType="textCapWords"
            android:singleLine="true"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/profile_mobile_no"
            android:layout_below="@+id/textMobile"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:textColor="@color/background"
            android:textSize="14sp"
            android:gravity="start|center"
            android:paddingRight="10dp"
            android:paddingEnd="10dp"
            android:paddingLeft="10dp"
            android:paddingStart="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"
            android:inputType="textCapWords"
            android:singleLine="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textEmail"
            android:textSize="9sp"
            android:layout_below="@+id/profile_mobile_no"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"
            android:textColor="@color/titleColour"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"
            android:gravity="start|center"
            android:text="@string/emailprofile"
            android:paddingRight="10dp"
            android:paddingEnd="10dp"
            android:layout_marginTop="10dp"
            android:inputType="textCapWords"
            android:singleLine="true"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/profile_email"
            android:layout_below="@+id/textEmail"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"
            android:textSize="14sp"
            android:textColor="@color/background"
            android:gravity="start|center"
            android:paddingRight="10dp"
            android:paddingEnd="10dp"
            android:paddingLeft="10dp"
            android:paddingStart="10dp"
            android:inputType="textCapWords"
            android:singleLine="true"
            android:layout_marginBottom="10dp"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout"
        android:background="@color/white">
        <Button
            android:layout_width="match_parent"
            android:layout_height="?android:actionBarSize"
            android:id="@+id/logoutButton"
            android:background="@drawable/card_scan_button"
            android:layout_marginRight="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="5dp"
            android:text="@string/logout"
            android:textColor="@drawable/white_to_black_text" />
    </RelativeLayout>
</RelativeLayout>